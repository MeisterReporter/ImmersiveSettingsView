<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImmersiveSettingsView" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/TooltipStyle</item>
    </style>

    <style name="TooltipStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/defaultRipple</item>
        <item name="android:textAppearance">@style/TooltipStyle.TextAppearance</item>
    </style>

    <style name="TooltipStyle.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>